<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#fff4f4f4"
        tools:context=".PartidoActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
    >
        <TextView android:id="@+id/fechapartido"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:textColor="@android:color/holo_blue_light"
                  android:layout_gravity="center"
        />

        <TextView android:id="@+id/horapartido"
                  android:textSize="20dp"
                  android:layout_marginLeft="15dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:textColor="@android:color/holo_blue_light"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#999"
            android:orientation="horizontal">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#fff4f4f4"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

            <TextView
                    android:id="@+id/local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/puntostotal_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:textSize="56sp" />

            <Button
                    android:id="@+id/punto1_local"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="#fd0095ff"
                    android:text="+1 Punto"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="14sp" />

            <Button
                    android:id="@+id/punto2_local"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fd0095ff"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="+2 Puntos"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="14sp" />

            <Button
                    android:id="@+id/punto3_local"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fd0095ff"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="+3 Puntos"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="#fff4f4f4"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

            <TextView
                    android:id="@+id/visita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:textSize="20sp" />

            <TextView
                    android:id="@+id/puntostotal_visita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:textSize="56sp" />

            <Button
                    android:id="@+id/punto1_visita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="#fd0095ff"
                    android:text="+1 Punto"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="14sp" />

            <Button
                    android:id="@+id/punto2_visita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fd0095ff"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="+2 Puntos"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="14sp" />

            <Button
                    android:id="@+id/punto3_visita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#fd0095ff"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="+3 Puntos"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

        <Button android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="GUARDAR"
                android:background="#fd0095ff"
                android:textColor="#fff"/>

    </LinearLayout>


</LinearLayout>