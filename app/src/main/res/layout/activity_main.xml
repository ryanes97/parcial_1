<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity">

    <EditText android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:hint="Equipo Local"
              android:id="@+id/local"
    />

    <EditText android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:hint="Equipo Visitante"
              android:id="@+id/visita"
    />

    <EditText android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:hint="Fecha"
              android:id="@+id/fecha"
    />

    <EditText android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:hint="Hora"
              android:id="@+id/hora"
    />

    <Button android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#fd0095ff"
            android:textColor="#fff"
            android:layout_marginTop="18dp"
            android:text="Iniciar Partido"
            android:id="@+id/btn_iniciar_partido"
    />

    <Button android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#fd0095ff"
            android:textColor="#fff"
            android:layout_marginTop="15dp"
            android:text="Historial"
            android:id="@+id/btn_historial"

    />

</LinearLayout>